{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "inventory",
  "description": "JSON Inventory Create",
  "type" : "object",
  "properties": {
    "id": {
      "not": {}
    },
    "href": {
      "not": {}
    },
    "createdOn": {
      "not": {}
    },
    "type": {
      "type": "string"
    },
    "companyId" : {
      "type": "string"
    },
    "price" : {
      "type": "number"
    },
    "quantity" : {
      "type": "integer"
    },
    "name" : {
      "type": "string"
    },
    "description" : {
      "type": "string"
    },
    "props": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "type": {
            "not": {}
          },
          "required": {
            "not": {}
          },
          "value" : {
            "type" : "string"
          }
        },
        "additionalProperties": false,
        "required": [
          "name", "value"
        ]
      }
    }
  },
  "required":["type", "name", "quantity", "price"],
  "additionalProperties": true
}

